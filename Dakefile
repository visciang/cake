# @include git+git@github.com:visciang/dake-elixir.git?ref=0.1.0 ELIXIR_ESCRIPT_EXTRA_APK="bash git openssh-client docker-cli-buildx graphviz"
@include git+https://github.com/visciang/dake-elixir.git?ref=0.1.0 ELIXIR_ESCRIPT_EXTRA_APK="bash git openssh-client docker-cli-buildx graphviz"

dake.app:
    FROM +elixir.escript
    RUN mkdir -p -m 0700 ~/.ssh \
        && ssh-keyscan github.com gitlab.com bitbucket.com >> ~/.ssh/known_hosts
    COPY priv/dake_cmd.sh /usr/bin/
